generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id    Int     @id @default(autoincrement())
  name  String @unique
}


model token_info{
  id    Int     @id @default(autoincrement())
  token_address String @unique
  name String?
  symbol String?
  @@index([token_address])
}


model comment{
  id    Int     @id @default(autoincrement())
  text String?  @db.Text 
  user String?
  timestamp BigInt
  username String?
  total_likes Int?
  file_uri String?
  token_address String
  comment_id   Int  @unique
  @@index([comment_id])
}

model trade{
  id    Int     @id @default(autoincrement())
  token_address String
  user          String
  timestamp     BigInt
  username      String?
  sol_amount    Float?
  token_amount  Float
  tx_index      Int
  signature     String @unique
  is_buy        Boolean
  @@index([signature])
}